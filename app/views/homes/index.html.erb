
<div class="page-padding">
  <h3 class="index-title">Your Homes</h3>
  <div class="home-cards d-flex flex-column">
    <% @homes.each do |home| %>
    <div>
    <div class="home-container d-flex justify-content-between">
      <div class="home-card">
        <p class="home-name-card"><%= link_to home.name, home_path(home), class: "home-name-card" %></p>



        <p class="home-location-card"><i class="fas fa-location-arrow"></i><span>&nbsp;</span><%= home.location %></p>
        </div>
        <div class="home-buttons">

       <%= link_to "Dashboard", home_devices_path(home.id), class: "btn-home btn-home-text" %>
       <%= link_to "Edit", edit_home_path(home), class: "btn-home btn-home-text" %>



        <button type="button" class="btn-home btn-home-text" data-toggle="modal" data-target="#exampleModal" >
          Delete Home
        </button>
        <%# <%= link_to "Delete Home", home_path(home.id), method: :delete, data: { confirm: "Are you sure?" } %> <!--This line is the original delete link> %>-->

        <!-- <button class="btn-home"><%#= link_to "Edit", edit_home_path, class: "btn-home-text" %></button> -->

      </div>

    </div>
    <hr>
  </div>



      <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">Danger!</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              Are You sure you want to delete this home? All data will be lost.
            </div>
              <div class="modal-footer">
                <button type="button" class="btn-home btn-home-text" data-dismiss="modal">Close</button>

                <%= link_to "Delete Home", home_path(home.id), type: "button", class: "btn-home btn-home-text", method: :delete, data: { confirm: "Are you sure?" } %>



                <%# <button type="button" class="btn btn-primary">Save changes</button> %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <button class="btn-home"><%= link_to "Add a Home", new_home_path, class: "btn-home-text" %></button>
    <div id="map"
     style="width: 100%; height: 600px;border-radius:30px;box-shadow: 0 5px 5px rgba(0,0,0,0.2);margin-bottom:100px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['API_KEY'] %>">
</div>
</div>




